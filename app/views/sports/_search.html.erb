<div class="ui mobile only container">
<%= form_tag({controller:"sports",action:"search"},id:"search_form") do %>
  <div class="ui search">
    <div class="ui input">
    <input type="text" name="key" placeholder="搜索队伍名称" value="">
    <!--以下是两种实现方法 -->
    <select name="title" class="ui compact selection dropdown computer-only">
      <option value="">项目</option>
      <option value="足球">足球</option>
      <option value="篮球">篮球</option>
      <option value="羽毛球">羽毛球</option>
      <option value="乒乓球">乒乓球</option>
      <option value="台球">台球</option>
    </select>
    <div class="ui compact selection dropdown computer-only">
      <input type="hidden" id="week_info" name="week_" value="">
      <div class="default text">第X周</div>
      <i class="dropdown icon"></i>
      <div class="menu ui transition hidden">
        <div class="item" data-value="校历第五周">校历第五周</div>
        <div class="item" data-value="校历第六周">校历第六周</div>
        <div class="item" data-value="校历第七周">校历第七周</div>
        <div class="item" data-value="校历第八周">校历第八周</div>
      </div>
    </div>
    <select name="wday_" class="ui compact selection dropdown computer-only">
      <option value="">具体日期</option>
      <option value="星期一">星期一</option>
      <option value="星期二">星期二</option>
      <option value="星期三">星期三</option>
      <option value="星期四">星期四</option>
      <option value="星期五">星期五</option>
      <option value="星期六">星期六</option>
      <option value="星期日">星期日</option>
    </select>
      <button type="submit" class="ui button">搜索</button>
    </div>
  </div>
<% end %>
</div>
